@model ApartmentMng.Core.Models.GetManyResult<ApartmentMng.Entities.Concrete.Apartment>
@{
    ViewData["Title"] = "HousingAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Daire Ekle</h3>


<form method="post" action="HousingAdd">
    <div class="form-group">
        <label for="exampleFormControlInput1">Daire No</label>
        <input class="form-control" id="HousingNo" name="HousingNo" />
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Kira Ücreti</label>
        <input class="form-control" id="RentMoney" name="RentMoney" />
    </div>

    <div class="form-group">
        <label for="exampleFormControlSelect1">Eklenecek Apartmanı Seçiniz</label>
        <select class="form-control" id="ApartmentName" name="ApartmentName">
            @if (Model != null && Model.Result != null)

                @foreach (var apartment in Model.Result)
                {
                    <option>@apartment.ApartmentName</option>
                }
            }
        </select>
    </div>
    <div>
        <button class="btn btn-bold btn-block btn-primary" type="submit">Ekle</button>
    </div>


</form>
